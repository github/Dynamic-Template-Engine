{
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "TextBlock",
              "weight": "bolder",
              "text": "Issue opened {{issue.number}}: {{issue.title | upcase }}",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "size": "small",
              "isSubtle": true,
              "text": "Created by",
              "wrap": true,
              "spacing": "none",
              "separator": true
            }
          ]
        }
      ],
      "spacing": "large",
      "separator": true
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "Repository: ",
              "value": "{{repository.name | upcase }}"
            }
          ]
        }
      ]
    }
  ]
}