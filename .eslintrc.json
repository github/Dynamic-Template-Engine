{
  "extends": [
    "plugin:jsdoc/recommended",
    "airbnb-typescript/base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": [
      "./tsconfig.json"
    ]
  },
  "rules": {
    "consistent-return": 0,
    "camelcase": 0,
    "prefer-object-spread": 0,
    "no-else-return": 0,
    "arrow-parens": 0,
    "operator-linebreak": 0,
    "lines-between-class-members": 0,
    "max-classes-per-file": 0,
    "linebreak-style": 0,
    "implicit-arrow-linebreak": 0,
    "strict": ["error", "never"],
    "no-only-tests/no-only-tests": "error",
    "jsdoc/require-jsdoc": 0, // Don't require jsdoc, just lint it if we have it
    "jsdoc/require-param": 0, // Don't require that all params are documented
    "jsdoc/require-returns": 0, // Don't require that all returns are documented
    "@typescript-eslint/camelcase": 0
  },
  "env": {
    "jest": true
  },
  "plugins": [
    "no-only-tests",
    "jsdoc",
    "@typescript-eslint"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx", ".json"]
      }
    }
  },
  "ignorePatterns": [
    "dist/",
    "test/"
  ]
}
